<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include layout="@layout/progress_bar" />

    <LinearLayout
        android:id="@+id/content_view"
        android:orientation="vertical"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_marginStart="10dp" android:layout_marginEnd="10dp"
        android:baselineAligned="false">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/slide_list"
            android:layout_weight="0.25" android:layout_width="match_parent" android:layout_height="0dp" />

        <ImageView android:id="@+id/curr_slide"
            android:layout_weight="0.75" android:layout_width="match_parent" android:layout_height="0dp" />
    </LinearLayout>

</RelativeLayout>